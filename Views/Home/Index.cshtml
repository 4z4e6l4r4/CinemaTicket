@model IEnumerable<CinemaTicket.Models.Movie>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Film Adı</th>
            <th>Yönetmen</th>
            <th>Süre</th>
            <th>Tür</th>
            <th>Vizyon Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Director</td>
                <td>@movie.Duration</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@movie.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@movie.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Film Ekle</a>
