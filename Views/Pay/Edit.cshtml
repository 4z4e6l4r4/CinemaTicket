@model CinemaTicket.Models.Pay

@{
    ViewData["Title"] = "Ödeme Detayları";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Ticket ID</dt>
        <dd class="col-sm-10">@Model.TicketId</dd>
        <dt class="col-sm-2">Ödeme Tutarı</dt>
        <dd class="col-sm-10">@Model.PaymentAmount</dd>
        <dt class="col-sm-2">Ödeme Yöntemi</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>
        <dt class="col-sm-2">Ödeme Durumu</dt>
        <dd class="col-sm-10">@Model.PaymentStatus</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Sil</a> |
    <a asp-action="Index">Listeye Dön</a>
</div>
