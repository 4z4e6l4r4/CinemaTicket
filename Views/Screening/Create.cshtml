@model CinemaTicket.Models.Screening

@{
    ViewData["Title"] = "Yeni Gösterim Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MovieId" class="control-label"></label>
        <select asp-for="MovieId" class="form-control">
            <!-- Film seçenekleri -->
        </select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SahneId" class="control-label"></label>
        <select asp-for="SahneId" class="form-control">
            <!-- Sahne seçenekleri -->
        </select>
        <span asp-validation-for="SahneId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScreeningTime" class="control-label"></label>
        <input asp-for="ScreeningTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="ScreeningTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">İptal</a>
</div>
