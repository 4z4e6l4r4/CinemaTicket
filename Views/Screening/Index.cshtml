@model IEnumerable<CinemaTicket.Models.Screening>

@{
    ViewData["Title"] = "Gösterimler";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Film Adı</th>
            <th>Sahne Adı</th>
            <th>Gösterim Zamanı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Movie.Name</td>
                <td>@item.Sahne.Name</td>
                <td>@item.ScreeningTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Gösterim Ekle</a>
